# Smart Home Energy Management System - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# GEMINI LLM CONFIGURATION
# =============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# =============================================================================
# ELASTICSEARCH CONFIGURATION
# =============================================================================
# Elasticsearch connection settings
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Index configuration
ELASTICSEARCH_INDEX_PREFIX=smart_home

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection for message broker
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# EMBEDDING MODEL CONFIGURATION
# =============================================================================
# Hugging Face embedding model
EMBEDDING_MODEL=mixedbread-ai/mxbai-embed-large-v1
EMBEDDING_DIMENSION=1024

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Agent update intervals and timeouts
AGENT_UPDATE_INTERVAL=30
MAX_AGENT_RETRIES=3
AGENT_TIMEOUT=60

# =============================================================================
# ENERGY SYSTEM CONFIGURATION
# =============================================================================
# Energy monitoring and optimization settings
ENERGY_PRICE_UPDATE_INTERVAL=300
DEVICE_POLLING_INTERVAL=10
COMFORT_OPTIMIZATION_INTERVAL=120

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging settings
LOG_LEVEL=INFO
LOG_FILE=smart_home_energy.log

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API server settings (if using web interface)
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development and testing flags
DEBUG=false
TESTING=false

# =============================================================================
# OPTIONAL: EXTERNAL SERVICE CONFIGURATION
# =============================================================================
# Weather service API (if using real weather data)
# WEATHER_API_KEY=your_weather_api_key
# WEATHER_PROVIDER=openweathermap

# Utility company API (if available)
# UTILITY_API_KEY=your_utility_api_key
# UTILITY_COMPANY=your_utility_company

# Smart home hub/platform integration
# SMARTTHINGS_TOKEN=your_smartthings_token
# HUBITAT_IP=192.168.1.100
# HOME_ASSISTANT_URL=http://192.168.1.100:8123
# HOME_ASSISTANT_TOKEN=your_home_assistant_token

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT secret for authentication (if using web interface)
# JWT_SECRET=your_jwt_secret_here

# API rate limiting
# API_RATE_LIMIT=100
# API_RATE_WINDOW=3600

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Email notifications
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# NOTIFICATION_EMAIL=alerts@yourdomain.com

# Push notifications
# PUSHOVER_TOKEN=your_pushover_token
# PUSHOVER_USER=your_pushover_user

# Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/your/webhook/url